@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/assets/login/css/loginstyle.css">
<script>
    // Check key "Enter" in textbox password
    function runScript(e) {
        if (e.keyCode == 13) {
            login();
            return false;
        }
    }
   function login ()
   {
       var inputUser = document.getElementById("username").value
       var inputPass = document.getElementById("password").value

        $.ajax({
            type: "post",
            url: "@Url.Action("CheckValidUser")",
            data: {
                'username': inputUser,
                'password': inputPass,
            },
            success: function (result) {

                if (result != "Success") {
                    document.getElementById("msg").innerHTML = '\xa0\xa0\xa0\xa0\xa0\xa0\xa0' + result + '\xa0\xa0\xa0\xa0\xa0\xa0\xa0';
                    document.getElementById("msg").style.visibility = 'visible';
                }
                else {
                    window.location.href = "@Url.Action("Index","Home")";
                    document.getElementById("msg").style.visibility = 'hidden';
                }
            }
        })
    }
</script>

