                            </div>

                            <div class="form-group">
                                <label for="password" class="text-info text-white">Password:</label><br>
                                <input type="password" name="password" id="password" onkeypress="return runScript(event)" class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="remember" class="text-info text-white">Remember me</label>
                                <span><input id="remember-me" name="remember-me" type="checkbox"></span>
                            </div>

                            <div class="justify-content-sm-center text-center">
                                <input type="button" name="submit" class="btn btn-primary btn-md" onclick="login();" style="background-color:#016485" value="Submit">
                            </div>

                            <div id="register-link" class="text-right">
                                <a href="@Url.Action("Signup","Login")" class="text-info text-white">Register here</a><br /><br />
                            </div>

                            <div class=" text-center ">
                                <label for="msg" id="msg" style=" border:1px solid #550519; background-color:#b20202; visibility:hidden;" class="text-primary text-white"> abc </label><br>
                            </div>

                        </form>
