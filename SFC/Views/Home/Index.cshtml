<section class="services1 cid-s2gv6RA8aE" id="services1-3">
    <!---->
    <!---->
    <!--Overlay-->
    <!--Container-->
    <div class="container">
        <div class="row justify-content-center">
            <!--Titles-->
            <div class="title pb-5 col-12">
                <h2 class="align-left pb-3 mbr-fonts-style display-1">Today's hot food&nbsp;</h2>
                <h3 class="mbr-section-subtitle mbr-light mbr-fonts-style display-5">
                    Wish you delicious. Love you
                    3000
                </h3>
            </div>

            @foreach (var item in Model.getListFood())
            {
                <div class="card col-12 col-md-6 p-3 col-lg-3">
                    <div class="card-wrapper">
                        <div class="card-img">
                            <img src="@item.src" alt="Mobirise" title="">
                        </div>
                        <div class="card-box">
                            <h4 class="card-title mbr-fonts-style display-5">
                                @item.name
                            </h4>
                            <p class="mbr-text mbr-fonts-style display-7">
                                Make with fresh vegetables<br>Remaining:
                                34<br>$@item.price
                            </p>
                            <!--Btn-->
                            <br>
                            <div class="input-group">
                                <input style="text-align:center;" type="number" value=@item.quantity size="14" min="0" />
                                <div class="mbr-section-btn align-center" onClick="showAddCart()">
                                    <a class="btn btn-primary-outline display-4">
                                        <span class="mbri-cart-add mbr-iconfont mbr-iconfont-btn"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>

